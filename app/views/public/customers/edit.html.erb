<div class="container">
  <div class="row">
    <div class="col">
      <% if flash[:customer_edit_error] %>
        <div class="alert alert-danger mt-5">
          <%= flash[:customer_edit_error] %>
        </div>
      <% end %>
      <h3 class="my-5">会員情報編集</h3>
      <table class="table table-borderless">
        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :first_name, placeholder: "令和" %></td>
          <td><%= f.text_field :last_name, placeholder: "道子" %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :first_name_kana, placeholder: "レイワ" %></td>
          <td><%= f.text_field :last_name_kana, placeholder: "ミチコ" %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code, placeholder: "000-0000" %></td>
          <td></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, placeholder: "住所を入力してください" %></td>
          <td></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, placeholder: "000-0000-0000" %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, placeholder: "sample@example.com" %></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td><%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>