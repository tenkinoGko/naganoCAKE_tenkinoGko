<div class="container mt-5">
  <div class="row">
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-3">
          <!--ジャンル検索-->
          <%= render 'public/items/sidebar' %>
        </div>
        <div class="col-md-9">
         <h2><%= @genre.name %>一覧 <span style="font-size: smaller;">(全<%= @items.count %>件)</span></h2>
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-md-3 product-item mt-3">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.image, class: "img-fluid" %>
                <% end %>
                <p><%= link_to item.name, item_path(item) %></p>
                <p>¥<%= item.price.floor.to_s(:delimited) %></p>
              </div>
            <% end %>
          </div>
        <div class="container d-flex justify-content-center">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
              <li class="page-item"><a class="page-link" href="#">Last</a></li>
            </ul>
          </nav>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>