<h3>ショッピングカート</h3>
<div class="cart">
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に空にしますか？" %>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th><br></th>
    </tr>
  </thead>
  <tboby>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.image, size: "130x100" %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price %></td>
      <td>
        <%= form_with model: cart_item, url:cart_item_path(cart_item), local: true do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更", class:"btn btn-sm btn-success" %>
        <% end %>
      </td>
      <td><%= number_with_delimiter(cart_item.subtotal) %></td>
      <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "date-confirm" => "商品を削除しますか？", class:"btn btn-sm btn-danger" %></td>
    </tr>
    <% @sum += cart_item.subtotal %>
    <% end %>
  </tboby>
</table>

<%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>

合計金額<%= number_with_delimiter(@sum) %>

<%= link_to "情報入力に進む", new_order_path, class:"btn btn-sm btn-success" %>