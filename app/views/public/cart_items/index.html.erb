<h3>ショッピングカート</h3>
<div class="cart">
  <link_to "カートを空にする", public_cart_items_destroy_all_path, class:"btn btn-sm btn-danger",method: :delete,data: { confirm: "本当に空にしますか？" }>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th><br></th>
    </tr>
  </thead>
  <tboby>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url:public_crt_item_path(cart_item), local: true do |f| %>
          <!--%= f.hidden_field :customer_id, :value => current_customer.id %-->
          <!--%= f.hidden_field :item_id, value => cart_item.item.id %-->
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更", class:"btn btn-sm btn-success" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除", public_cart_item_path(cart_item.id), method: :delete, "date-confirm" => "商品を削除しますか？", class:"btn btn-sm btn-danger" %></td>
    </tr>
    <% @sum += cart_item.subtotal %>
    <% end %>
  </tboby>
</table>
<%= link_to "買い物を続ける", public_items_path, class:"btn btn-primary" %>
合計金額<%= @sum %>

<%= link_to "情報入力に進む", new_public_order_path, class:"btn btn-sm btn-success" %>