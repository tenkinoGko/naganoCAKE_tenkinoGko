<div class="container mt-5">
  <h2 class="mb-4">新規会員登録</h2>

<%= form_with(model: resource, url: customer_registration_path) do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :first_name, "(姓)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, "(名)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :first_name_kana, "(セイ)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name_kana, "(メイ)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

<div class="actions">
  <%= f.submit "新規登録", class: "btn btn-success" %>
</div>

<% end %>

<h4>既に登録済の方</h4>

<%= render "public/shared/links" %>からログインして下さい。