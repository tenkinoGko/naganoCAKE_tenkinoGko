<h1>商品詳細</h1>

<table>
  <tbody>
    <tr>
      <td colspan="2">
        <%= image_tag @item.image, size: "300x300" %>
      </td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>価格</td>
      <td><%= @item.price %></td>
    </tr>
  </tbody>
</table>