<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @item.image, class: "img-fluid" %>
    </div>
    <div class="col-md-6">
      <h2 style="color: #543520;"><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <p>¥<%= (@item.price * 1.1).floor.to_s(:delimited) %> (税込)</p>

      <%= form_with model: CartItem.new, url: cart_items_path, local: true do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <div class="col-md-4 form-group">
          <%= f.label :amount, "個数選択" %>
          <%= f.select :amount, (1..10).to_a, {}, class: "form-control" %>
          <%= f.submit "カートに入れる", class: "btn btn-success mt-5" %>
        </div>

      <% end %>
    </div>
  </div>
</div>