<h1>商品一覧</h1>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image, size: "300x300" %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>