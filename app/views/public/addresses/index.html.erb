<h3>配達先登録/一覧</h3>
<%= form_with model: @address, local: true  do |f| %>
<table>
  <tr>
    <th><%= f.label :郵便番号(ハイフンなし) %></th>
    <td><%= f.text_field :postal_code, placeholder:"0000000", id:"customer_postal_code" %></td>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address, placsholder:"住所を入力してください", id:"customer_address" %></td>
  </tr>
  <tr>
    <th><%= f.label :宛名 %></th>
    <td><%= f.text_field :name, placeholder:"名前を入力してください" %></td>
    <td><%= f.submit "新規登録", class:"btn btn-sm btn-success" %></td>
  </tr>
</table>
<% end %>

<table class="address">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(@address.id), class="btn btn-sm btn-success" %></td>
      <td><%= link_to "削除する", public_address_path(@address.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？"　%></td>
    </tr>
    <% end %>
  </tbody>
</table>
