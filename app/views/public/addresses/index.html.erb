
<div class="container pt-5 mb-5">
  <div class="row">
    <div class="col-sm-3 px-sm-0 mb-4 offset-sm-1">
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <h3 class="text-center" style="background-color: #543520;"><strong>配達先登録/一覧</strong></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @address, local: true do |f| %>
        <table>
          <tr>
          <div calss="form-group">
            <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :post_code, placeholder:"0000000", id: "customer_postal_code" %></td>
          </div>
          </tr>
          <tr>
          <div calss="form-group">
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, placeholder:"住所を入力してください", id: "customer_address", :size => "50" %></td>
          </div>
          </tr>
          <tr>
          <div calss="form-group">
            <th><%= f.label :宛名 %></th>
            <td><%= f.text_field :name, placeholder:"名前を入力してください" %></td>
            <td><%= f.submit "新規登録", class:"btn btn-sm btn-success" %></td>
          </div>
          </tr>
        </table>
      <% end %>
      <div class="row mt-5">
        <div class="col-sm-10 px-sm-0 mx-auto">
          <table class="table table-bordered">
            <thead class="thead table-active">
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th><br></th>
              </tr>
            </thead>
            <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.post_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                  <%= link_to "削除する", address_path(address.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
              </tr>
            <% end %>
          </div>
        </tbody>
      </table>
    </div>
  </div>
</div>
