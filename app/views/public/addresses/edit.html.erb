<div class="container pt-5 mb-5">
  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @address, local: true do |f| %>
        <table>
          <tr>
          <div calss="form-group">
            <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :post_code, placeholder:"0000000", id: "customer_postal_code" %></td>
          </div>
          </tr>
          <tr>
          <div calss="form-group">
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, placeholder:"住所を入力してください", id: "customer_address", :size => "50" %></td>
          </div>
          </tr>
          <tr>
          <div calss="form-group">
            <th><%= f.label :宛名 %></th>
            <td><%= f.text_field :name, placeholder:"名前を入力してください" %></td>
            <td><%= f.submit "変更内容を保存", class:"btn btn-sm btn-success" %></td>
          </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>