<div class="container pt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-5 ml-5">
                <h3 class="mb-4 px-3"><strong>注文履歴詳細</strong></h3>
            </div>
            <h4 class="mb-2"><strong>注文情報</strong></h4>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="table-secondary w-25">注文日</th>
                        <td>
                            <%= I18n.l @order.created_at %>
                        </td>
                    </tr>
                    <tr>
                        <th class="table-secondary w-25">配送先</th>
                        <td>
                            〒<%= @order.postal_code %><br>
                            <%= @order.address %><br>
                            <%= @order.name %>
                        </td>
                    </tr>
                    <tr>
                        <th class="table-secondary w-25">支払方法</th>
                        <td>
                            <%= @order.payment_method %>
                        </td>
                    </tr>
                    <tr>
                        <th class="table-secondary w-25">ステータス</th>
                        <td>
                            <%= @order.status %>
                        </td>
                    </tr>
                </tbody>
            </table>



            <strong class="mb-4">請求情報</strong>
            <table class="table table-bordered">
                <tr>
                    <th class="table-secondary w-25">商品合計</th>
                    <td>
                        ¥<%= (@order.total_payment - @order.shipping_cost).to_s(:delimited, delimiter: ',') %>
                    </td>
                </tr>
                <tr>
                    <th class="table-secondary w-25">配送料</th>
                    <td>
                        ¥<%= @order.shipping_cost.to_s(:delimited, delimiter: ',') %>
                    </td>
                </tr>
                <tr>
                    <th class="table-secondary w-25">ご請求金額</th>
                    <td>
                        ¥<%= @order.total_payment.to_s(:delimited, delimiter: ',') %>
                    </td>
                </tr>
            </table>

            <strong class="mb-4">注文内容</strong>
            <table class="table table-bordered">
                <thead class="table-secondary w-25">
                    <tr>
                        <th>商品</th>
                        <th>単価（税込）</th>
                        <th>個数</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    <% @order_details.each do |order_detail| %>
                    <tr>
                        <td><%= order_detail.item.name %></td>
                        <td>¥<%= (order_detail.item.price * 1.1).floor.to_s(:delimited, delimiter: ',') %></td>
                        <td><%= order_detail.amount%></td>
                        <td>¥<%= ((order_detail.item.price * 1.1).floor * (order_detail.amount)).to_s(:delimited, delimiter: ',') %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>