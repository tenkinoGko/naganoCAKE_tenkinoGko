<div class="container">
  <div class="row">
    <h3 class="px-4" style="background-color: #eee;">会員一覧</h3>


      <table class="table">
        <thead>
        <tr style="background-color: #eee;">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.first_name, admin_customer_path(customer) %> <%= link_to customer.last_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><span style="color:<%= customer.is_active ? 'green' : 'gray' %>;"><%= customer.is_active ? "有効":"退会" %></span></td>
          </tr>
        <% end %>
      </table>
      <!--ここのページネーションは見た目だけ表示してて、機能はまだありません！-->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">Next ></a></li>
          <li class="page-item"><a class="page-link" href="#">Last >></a></li>
        </ul>
      </nav>
    </div>
  </div>

