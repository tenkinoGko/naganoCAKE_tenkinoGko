<div class="container pt-5">
  <div class="row gy-5" style="display: flex; justify-content: space-between;">
    <div class="col-md-2">
      <h3 class="px-4" style="background-color: #543520;">会員一覧</h3>
    </div>
   </div>

  <div class="row">
    <div class="col">
      <table class="table mt-5">
        <thead class="thead">
        <tr style="background-color: #543520;">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.first_name, admin_customer_path(customer) %> <%= link_to customer.last_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><span style="color:<%= customer.is_active ? 'green' : 'gray' %>;"><%= customer.is_active ? "有効":"退会" %></span></td>
          </tr>
        <% end %>
      </table>

    </div>  
  </div>    
  
  
  

     <div class="container d-flex justify-content-center">
      <%= paginate @customers, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>

