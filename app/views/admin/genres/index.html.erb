<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>ジャンル追加・一覧画面</h2><br>

   <%= form_for(@genre, url: admin_genres_path) do |f| %>


          <%= f.label :ジャンル %>
          <%= f.text_field :name,class: "col-md-4" %>

          
          <%= f.submit "追加" ,class: "btn btn-primary" %>

    <% end %>

    <br>
      <!-- ofsetは左右の余白 -->
      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
           
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>