<div class="container mt-5">
  <h2 class="mb-4">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-7">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
