<h1>商品詳細</h1>

<table>
  <tbody>
    <tr>
      <td>商品画像</td>
      <td><%= image_tag @item.image, size: "300x300" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>価格</td>
      <td><%= @item.price %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td>
        <% if @item.is_active == true %>
          販売可能
        <% else %>
          販売不可
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>
<%= link_to "削除する", admin_item_path(@item), method: :delete, data: { confirm: "本当に削除しますか？" } %>