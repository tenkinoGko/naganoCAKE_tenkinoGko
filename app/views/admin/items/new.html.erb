<%= form_with(model: @item, url: admin_items_path, local: true) do |f| %>
<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    
  <h1>新規商品投稿用フォーム</h1>
  
　<div class="field">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>
  </div>
  
   <div class="field">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
  
  <div class="field">
    <%= f.label :price, "税抜価格" %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :is_active, "販売可能" %>
    <%= f.check_box :is_active %>
  </div>  


  <%= f.submit "投稿する" %>
<% end %>
</div>
</div>
</div>