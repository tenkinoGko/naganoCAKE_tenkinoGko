<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <h3 class="px-3" style="background-color: #eee;">商品新規投稿</h3>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-md-5">
      <%= form_with(model: @item, url: admin_items_path, local: true) do |f| %>

        <h1></h1>
        
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--選択してください--" }, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.label :price, "税抜価格" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
  <%= f.label :is_active, "販売ステータス" %>
  <div class="form-check">
    <%= f.radio_button :is_active, true, class: "form-check-input" %>
    <%= f.label :is_active, "販売中", class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= f.radio_button :is_active, false, class: "form-check-input" %>
    <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
  </div>
</div> 

        <%= f.submit "投稿する", class: "btn btn-primary" %>
        
      </div>
    </div>
  
<% end %>