<%= form_with(model: @item, url: admin_item_path(@item), method: :patch) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">

        <h1>商品編集</h1>
        <% if flash[:item_created_error] %>
          <div class="alert alert-danger">
            <%= flash[:item_created_error] %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--選択してください--" }, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.label :price, "税抜価格" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
  <%= f.label :is_active, "販売可能" %>
  <div class="form-check">
    <%= f.radio_button :is_active, true, class: "form-check-input" %>
    <%= f.label :is_active, "販売中", class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= f.radio_button :is_active, false, class: "form-check-input" %>
    <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
  </div>
</div>

  <div>
    <%= f.submit "更新する" %>
  </div>
<% end %>